<h1><%= I18n.t("articles.show", title: @article.title) %></h1>
<br><br>
	<%= @article.text %>
<br>
Created by: <%= @article.creator %>
<hr>
<hr>
<h3>Comments:</h3>
<% @article.comments.each do |com| %>
<br>
<h3><i><%= com.author %> said: </i></h3>
<%= com.body %>
<br><br>
<hr>
<%end%>

<h2>Add comments</h2>
<%= form_for ([@article, @article.comments.build]), data: {turbo:false} do |f| %>



<p>
	<%= f.label :body %><br />  
	<%= f.text_area :body %>
</p>

<p>
	<%= f.submit%>
</p>
<%end%>
<%= link_to "See all articles", articles_path %>