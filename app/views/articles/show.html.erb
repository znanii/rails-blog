<h4><%= @article.title %></h4>
<br><br>
	<%= @article.text %>
<hr>

<%= form_for ([@article, @article.comments.build]), data: {turbo:false} do |f| %>

<p>
	<%= f.label :author %><br />  <%# equal to TITLE%>
	<%= f.text_field :author %>
</p>

<p>
	<%= f.label :body %><br />  
	<%= f.text_area :body %>
</p>

<p>
	<%= f.submit%>
</p>
<%end%>
<%= link_to "See all articles", articles_path %>