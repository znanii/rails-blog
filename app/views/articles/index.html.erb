<h2>Enjoy reading the posts</h2>
<% @articles.each do |art| %>
	<h4><%= art.title.capitalize %></h4>
<br><br>
	<%= art.text %>
<br><br>
	<% if art.creator == current_user.username %>
<%= link_to 'Show', article_path(art) %> |
<%= link_to 'Edit', edit_article_path(art) %> | 
<%=link_to 'Delete', article_path(art), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %>
	<% else %>
<%= link_to 'Show', article_path(art) %> 
<% end %>
<%#= button_to "Delete", article_path(art), method: :delete %>
<hr>
<% end %>