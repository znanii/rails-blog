<div class = "container" >
	<div class = "row" >
	<div class="col-xs-12">
<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path, data: {turbo:false}  do |f| %>

<% if @contact && @contact.errors.any? %>
<p>
	<ul>
	<% @contact.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<%end%>
	</ul>
</p>
<% end %>

<p>
	<%= f.label :email %><br />
	<%= f.text_field :email %>
</p>

<p>
	<%= f.label :message %><br />  
	<%= f.text_area :message %>
</p>

<p>
	<%= f.submit 'send message'%>
</p>
<% end%>
</div>
</div>
</div>
